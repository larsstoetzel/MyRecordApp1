<Window x:Class="MyRecordApp.View.WelcomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Top="400"
        Left="800"
        Title="Welcome" Height="350" Width="800" 
        ResizeMode="NoResize">
    <Grid >
        <RibbonTwoLineText VerticalAlignment="Top" Text="Welcome to My Record App" Margin="0,57,0,0" FontSize="50"/>
        <Button x:Name="btnMyCollection" Content="My Collection" FontSize="20" HorizontalAlignment="Center" Height="55" Margin="0,133,0,0" VerticalAlignment="Top" Width="214" Click="btnMyCollection_Click"/>
        <Button x:Name="btnEnterToken" Content="Enter Token" FontSize="20" HorizontalAlignment="Center" Height="54" Margin="0,202,0,0" VerticalAlignment="Top" Width="214" Click="btnEnterToken_Click"/>
        <Border BorderBrush="Black" BorderThickness="3" HorizontalAlignment="Center" Height="260" VerticalAlignment="Center" Width="700"/>
    </Grid>
</Window>
